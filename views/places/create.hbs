<div class="container">

  <div class="row justify-content-center">

    <div class="col-8">

      <form action="/places/create" method="POST">

        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name">
        </div>

        <div class="form-group">
          <label for="type">Type</label>
          <input type="text" class="form-control" id="type" name="type">
        </div>

        <div class="row">
          <div class="col-6">

            <div class="form-group">
              <label for="latitude">Latitude</label>
              <input type="number" class="form-control" id="latitude" name="latitude" step="any">
            </div>

          </div>

          <div class="col-6">

            <div class="form-group">
              <label for="longitude">Longitude</label>
              <input type="number" class="form-control" id="longitude" name="longitude" step="any">
            </div>

          </div>

        </div>

        <button type="submit" class="btn btn-dark btn-block">Create</button>

      </form>

    </div>

  </div>

</div>